{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "detail": "Build workspace (default)",
      "type": "shell",
      "command": "cd ~/dev_ws;. install/setup.zsh;colcon build --packages-select ${input:package}",
      "problemMatcher": [],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "run talker",
      "detail": "Run ROS2",
      "type": "shell",
      "command": "cd ~/dev_ws;. install/setup.zsh;ros2 run ${input:package} talker",
      "problemMatcher": []
    },
    {
      "label": "run listener",
      "detail": "Run ROS2",
      "type": "shell",
      "command": "cd ~/dev_ws;. install/setup.zsh;ros2 run ${input:package} listener",
      "problemMatcher": []
    },
  ],
  "inputs": [
      {
        "id": "package",
        "type": "promptString",
        "description": "Package name",
        "default": "simplefoc_can_pubsub"
      }
    ]
}